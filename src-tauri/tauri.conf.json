{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "NanChat",
  "version": "0.1.0",
  "identifier": "com.nanwallet.dev",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "NanChat",
        "resizable": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "host": "your.website.com", "pathPrefix": ["/open"] },
        { "host": "another.site.br" }
      ],
      "desktop": {
        "schemes": ["nano", "web-nano", "ban", "nanauth", "nan"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzRkY1QjE3OTNCMUI3ODMKUldTRHQ3R1RGMXYvMHhJb21sSjV2VVdxS1NuWnd3dEs1Z21HVWFpR3FwS0N4RmJ4RUtrOUZKeW0K",
      "endpoints": [
        "https://github.com/yxse/nanchat/releases/latest/download/latest.json"
      ] 
    }
  }
}
