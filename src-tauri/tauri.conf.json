{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "NanWallet",
  "version": "0.1.0",
  "identifier": "com.nanwallet.dev",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run ui",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "NanWallet",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "host": "your.website.com", "pathPrefix": ["/open"] },
        { "host": "another.site.br" }
      ],
      "desktop": {
        "schemes": ["nano", "web-nano"]
      }
    }
  }
}
