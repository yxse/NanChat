    "@ledgerhq/logs": "^6.12.0",
    "@yudiel/react-qr-scanner": "^2.0.1",
    "antd-mobile": "^5.36.0",
    "async-lock": "^1.4.1",
    "bignumber.js": "^9.1.2",
    "hw-app-nano": "^1.3.0",
    "multi-nano-web": "^1.5.1",
    "nanocurrency": "^2.5.0",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-confetti-boom": "^1.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
